{% extends 'base.html.twig' %}

{% block title %}
	actualités
{% endblock %}

{% block body %}


	<div class="row row-cols-1 row-cols-md-3 g-4 mt-5 mb-2 container w-100 m-auto text-center bg-dark p-3">
		<h3 class="text-center text-bold text-uppercase m-auto  text-white " >
			Dernières actualités
		</h3>
	</div>
	<div class="row row-cols-1 row-cols-md-3 g-4 mt-5 mb-2 container w-100 m-auto">
		{% for blogpost in blogposts %}
			<a href="">
				<div class="col">
					<div class="card h-100">
						{# <img src="https://iamage.fr/images/secure/ez4eGO/ccVfseB1pd50xKR_1676680591.jpg" class="card-img-top" alt="image de {{asset( blogpost.titre) }}" style="height : 150px; "> #}
						<div class="card-body">
							<h5 class="card-title">
								{{blogpost.titre }}
							</h5>
							<p class="card-text">
								{{blogpost.contenu | u.truncate(30, '...', false )}}
							</p>
						</div>
						<div class="card-footer">
							<p class="text-center">
								Publiée le :
								<small class="text-body-secondary">
									{{blogpost.createdAt | date('d/m/Y') }}
								</small>
							</p>
						</div>
					</div>
				</div>
			</a>
		{% endfor %}
	</div>
	{# pagination  #}
	<div class="d-flex justify-content-center  m-2 ">
		{% do blogposts.setPageRange(2) %}
		{{knp_pagination_render(blogposts, 'base/pagination.html.twig')}}
	</div>
{% endblock %}
